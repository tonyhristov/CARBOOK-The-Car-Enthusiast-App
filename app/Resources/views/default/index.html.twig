{% extends "base.html.twig" %}

{% block body %}

    {% if app.user %}

        {% for post in posts %}
            <div class="post">
                <article>
                    <div>
                        <h5 class="author">
                            <img src="{{ asset('uploads/images/profiles/' ~ post.author.image) }}"
                                 alt="Cannot load the picture"
                                 class="w3-circle" width="50" height="50">
                            {{ post.author.username }}
                        </h5>
                    </div>
                    <hr>
                    <div>
                        <h1>{{ post.title }}</h1>
                    </div>
                    <div>
                        {% set count = post.description | length / 2 %}
                        <p>
                            {{ post.description | slice(0, count) ~ '...' }}
                        </p>
                    </div>
                    <div>
                        <a href="{{ path('post_view', {id: post.id}) }}">
                            <img src="{{ asset('uploads/images/posts/' ~ post.image) }}" alt="Cannot load the picture"
                                 width="400" height="200">
                        </a>
                    </div>
                    <br>
                    <div style="background: #1E90FF; float:right ">
                        <a href="{{ path('post_view', {id: post.id}) }}"
                           class=" w3-button w3-hide-small w3-padding-large w3-hover-grey" style="color: white">Read
                            more</a>
                    </div>
                    <br><br><br>
                    <div>
                        <h5 style="float: right">Date Added: {{ post.addedOn | date("F jS \\a\\t g:ia") }}</h5>
                    </div>
                    <br>
                </article>
            </div>
        {% endfor %}

    {% else %}
        <!-- Header -->
        <header class="w3-container w3-blue w3-center" style="padding:128px 16px">
            <h1 class="w3-margin w3-jumbo">THE CARBOOK: THE SITE FOR CAR ENTHUSIAST</h1>
            <button class="w3-button w3-grey w3-padding-large w3-large w3-margin-top"><a
                        href="{{ path('security_login') }}">Go To Login Page</a></button>
        </header>



        <!-- Second Grid -->
        <div class="w3-row-padding w3-grey w3-padding-64 w3-container">
            <div class="w3-content">
                <div class="w3-third w3-center">
                    <i class="fa fa-car" style="font-size:200px;color: dodgerblue"></i>
                </div>

                <div class="w3-twothird">
                    <h1>CARBOOK</h1>
                    <h4 class="w3-padding-32">What is CARBOOK.</h4>

                    <h5 class="w3-text-grey">This site is made for car enthusiast that want to share there cars with
                        others. You can share your vehicle, no matter if it is a bike, a supercar or a tractor. When you
                        share it many people arround the world will see it. Why I made this, well we all want takes
                        pictures of our cars, because we know that they are prettier than us and we want to share them
                        with other people.</h5>
                </div>
            </div>
        </div>

        <div class="w3-container w3-blue w3-center w3-opacity w3-padding-64">
            <h1 class="w3-margin w3-xlarge">Paul Walker: If one day speed kills me, don't cry cause I was smilling!</h1>
        </div>
    {% endif %}

{% endblock %}
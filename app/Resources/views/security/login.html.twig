{% extends "base.html.twig" %}

{% block body_id 'register' %}

{% block body %}

    <form class="centerText" name="authenticate" class="form-horizontal" action="{{ path('security_login') }}" method="post">
        <div class="loginForm">
            <h1>Login</h1>
            <h3>Please fill in this form to login into your account.</h3>
            <hr>
            <label for="username">Username</label>
            <label>
                <input type="text" class="form-control" id="username" placeholder="Enter Username" name="_username">
            </label>

            <label for="psw"><b>Password</b></label>
            <label>
                <input type="password" id="password" placeholder="Enter Password" name="_password">
            </label>
            <hr>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </div>

            <div class="loginForm signin">
                <p>You haven't got account? You can always go to make one at the <a href="{{ path('user_register') }}">Sign
                        Up</a> page.</p>

            </div>
        </div>
    </form>


{% endblock %}
{% extends "base.html.twig" %}

{% block body_id 'register' %}

{% block body %}
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: white;
        }

        * {
            box-sizing: border-box;
            color: white;
            text-align: center;

        }

        /* Add padding to containers */
        .container {
            margin: 75px 150px 30px;
            padding: 16px 24px 24px 30px;
            background-color: grey;
        }

        /* Full-width input fields */
        input[type=text], input[type=password] {
            width: 70%;
            padding: 15px;
            margin: 5px auto 5px;
            display: block;
            border: none;
            text-align: center;
            color: white;
            background: #1E90FF;
        }

        input[type=text]:focus, input[type=password]:focus {
            width: 70%;
            padding: 15px;
            margin: 5px auto 5px;
            display: block;
            border: none;
            text-align: center;
            color: white;
            background: #1E90FF;
        }

        /*Overwrite default styles of hr*/
        hr {
            border: 3px solid white;
            margin-bottom: 25px;
        }


        .btn {
            background-color: #1e90ff;
            color: white;
            padding: 16px 20px;
            margin: auto;
            border: solid white;
            cursor: pointer;
            width: 65%;
            opacity: 0.9;
        }


        ::placeholder {
            color: white;
        }


        a {
            color: white;
        }


        .signin {
            color: white;
            background-color: #1e90ff;
            text-align: center;
        }
    </style>


    <form class="form-horizontal" action="{{ path('user_register') }}" method="post">
        <div class="container">
            <h1>Register</h1>
            <h3>Please fill in this form to create an account.</h3>
            <hr>


            <label for="user_username"><b>Email</b></label>
            <label>
                <input type="text" id="user_username" placeholder="Username" name="user[username]" required >
            </label>

            <label for="user_email"><b>Email</b></label>
            <label>
                <input type="text" id="user_email" placeholder="Email" name="user[email]" required >
            </label>

            <label for="user_password_first"><b>Password</b></label>
            <label>
                <input type="password" id="user_password_first" placeholder="Password"
                       name="user[password][first]" required>
            </label>

            <label for="user_password_second"><b>Confirm Password</b></label>
            <label>
                <input type="password" id="user_password_second" placeholder="Password"
                       name="user[password][second]" required>
            </label>

            <label for="user_name"><b>Name</b></label>
            <label>
                <input type="text" id="user_name" placeholder="Name"
                       name="user[name]" required>
            </label>
            <hr>

            <button type="submit" class="btn btn-primary">Register</button>

{#                        {{ form_row(form._token) }}#}
        </div>
    </form>

    <div class="container signin">
        <p>Already have an account? Go to <a href="{{ path('security_login') }}">Log In</a> page.</p>
    </div>


{% endblock %}